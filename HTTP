# урок 7

# метод greet
curl -X POST \
    -H 'Content-Type: application/json' \
    -d '{"jsonrpc":"2.0","id":1,"method": "greet","params":{"name":"Tota"}}' \
    http://localhost:8080/json-rpc

# метод get_users

curl -X POST \
    -H 'Content-Type: application/json' \
    -d '{"jsonrpc":"2.0","id":1,"method": "get_users"}' \
    http://localhost:8080/json-rpc

